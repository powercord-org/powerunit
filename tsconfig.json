{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true, 
    "strictPropertyInitialization": true,
  
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowJs": false,

    "lib": [ "es2020.string", "es2020.bigint" ],
    "baseUrl": "src",
    "paths": {
      "@lib/*": [ "lib/*" ],
      "@api/*": [ "api/*" ],
      "@util/*": [ "util/*" ]
    },

    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [ "src/**/*" ]
}
